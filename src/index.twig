{% extends 'base.twig' %}

{% block body %}
    <div>
        {% include 'header.twig' %}

        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-12">
                    <div class="py-8">
                        <h1 class="text-center mb-8">
                            RollDiceJS v1.0.0
                        </h1>

                        <div class="row">
                            <div class="col-12">
                                <div class="row mb-8">
                                    <div class="col-4 text-center">
                                        <button data-new-game type="button" class="btn btn-danger">Nová hra</button>
                                    </div>
                                    <div class="col-4 text-center">
                                        <button data-roll type="button" class="btn btn-warning">Hodit kostkou</button>
                                    </div>
                                    <div class="col-4 text-center">
                                        <button data-save-points type="button" class="btn btn-info">Uložit body</button>
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 col-md-4">
                                <div data-player class="b-player card testimonial-card position-relative">

                                    <span data-active-badge class="d-none position-absolute top-0 start-100 translate-middle badge rounded-pill bg-warning">
                                        Na tahu
                                    </span>

                                    <div class="mx-auto bg-white w-50 pt-6">
                                        <img src="https://mdbcdn.b-cdn.net/img/Photos/Avatars/img%20(1).webp" class="rounded-circle img-fluid" />
                                    </div>
                                    <div class="card-body">
                                        <h4 class="mb-4" data-name>Jenda</h4>
                                        <hr />
                                        <p class="dark-grey-text mt-4">
                                            Aktuální skóre: <span data-score>0</span>
                                        </p>
                                        <hr>
                                        <p class="dark-grey-text mt-4 mb-0">
                                            Skóre: <span data-score-total>0</span>
                                        </p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 col-md-4 text-center">
                                <div class="c-dice">
                                    <div data-dice class="b-dice js-unused"></div>
                                </div>
                            </div>
                            <div class="col-12 col-md-4 text-end">
                                <div data-player class="b-player card testimonial-card">

                                    <span data-active-badge class="d-none position-absolute top-0 start-100 translate-middle badge rounded-pill bg-warning">
                                        Na tahu
                                    </span>

                                    <div class="mx-auto bg-white w-50 pt-6">
                                        <img src="https://mdbcdn.b-cdn.net/img/Photos/Avatars/img%20(1).webp" class="rounded-circle img-fluid" />
                                    </div>
                                    <div class="card-body">
                                        <h4 class="mb-4" data-name>Mamka</h4>
                                        <hr />
                                        <p class="dark-grey-text mt-4">
                                            Aktuální skóre: <span data-score>0</span>
                                        </p>
                                        <p class="dark-grey-text mt-4 mb-0">
                                            Skóre: <span data-score-total>0</span>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script type="module" src="js/index.js"></script>
{% endblock %}
